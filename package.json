{
  "name": "mcmc-nexus-cli",
  "version": "1.0.1",
  "description": "An unofficial CLI speedtest tool for MCMC Nexus.",
  "main": "speedtest.js",
  "type": "module",
  "bin": "speedtest.js",
  "scripts": {
    "speedtest": "node speedtest.js",
    "prebuild": "esbuild speedtest.js --bundle --platform=node --outfile=speedtest-bundle.js",
    "build": "pkg speedtest-bundle.js --targets node18-linux-x64,node18-macos-x64,node18-win-x64 --out-path dist",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/samleong123/mcmc-nexus-cli.git"
  },
  "keywords": [
    "speedtest",
    "cli",
    "mcmc",
    "nexus"
  ],
  "author": "@samleong123",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/samleong123/mcmc-nexus-cli/issues"
  },
  "homepage": "https://github.com/samleong123/mcmc-nexus-cli#readme",
  "dependencies": {
    "axios": "^1.10.0",
    "chalk": "^5.4.1",
    "cli-progress": "^3.12.0",
     "yargs": "^17.7.2"
  },
  "devDependencies": {
    "esbuild": "^0.20.0",
    "pkg": "^5.8.1"
  }
}